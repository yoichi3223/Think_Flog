  <%= image_tag  "facebook.png" ,class:"facebook-login" %>
  <% end %>
   　</div>
<%= link_to "google",user_google_oauth2_omniauth_authorize_path, method: :post%>
      </div>
          </div>
              </div>
                  </div>

