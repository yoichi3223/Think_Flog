<div class="login-form" >
  <div class="login-form-contents">

    <div class= "login-leftside-contents">
      <p class="login-text">Let's log in!!<br>
Have notes every day!!</p>
</div>

  <div class= "right-side-contents">
<div class = "form-contents">
  <h1>ログイン</h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "50x10",class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password", size: "50x10",class:"form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :ログインを保持する %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログインする",class:"btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

  </div>
</div>



  </div>
</div>